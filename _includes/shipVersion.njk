<nord-stack direction="horizontal" gap="s">
  {% if ship.new %}
    <nord-badge variant="danger">NEW</nord-badge>
  {% elseif ship.updated %}
    <nord-badge variant="danger">UPDATED</nord-badge>
  {% endif %}
  {% if ship.popular %}
    <nord-badge variant="highlight">POPULAR</nord-badge>
  {% endif %}
  {% if ship.retired %}
    <nord-badge variant="danger">RETIRED</nord-badge>
  {% else %}
    <nord-badge>v{{ ship.version }}</nord-badge>
  {% endif %}
</nord-stack>
